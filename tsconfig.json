{
  "extends": "@tsconfig/node16/tsconfig.json",

  "include": ["src/**/*"],

  "compilerOptions": {
    // Modules
    "module": "ES2022",
    "moduleResolution": "Node16",
    "rootDir": "src",

    // Emit
    "outDir": "out",
    "sourceMap": true,

    // Language and Environment
    "lib": ["ES2022"],
    "target": "ES2022"
  }
}
